@model List<string>

<br />
<br />
<div class="border backgroundWhite p-4">
    <div class="row flex-even">
        <div class="col-6">
            <h2 class="text-primary">Blob Containers</h2>
        </div>
        <div class="col-6 flex-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Create New </a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Container Name
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item)
                        </td>
                        <td class="flex-right">
                            <a class="btn btn-primary text-white" asp-action="Manage" asp-controller="Blob" asp-route-containerName="@item">
                                Manage
                            </a>

                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-containerName="@item">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Containers exists...</p>
        }
    </div>
</div>